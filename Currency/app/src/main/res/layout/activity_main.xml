<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3B8B8"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_7"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_7"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_4"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_6"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_3"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_5"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_9"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_2" />

    <Button
        android:id="@+id/button_del"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:drawableLeft="@drawable/backspace"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:paddingStart="55dp"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_2" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_8"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_ce"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/ce"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_4"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_1"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_3"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_2" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_2"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/_0"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_point" />

    <Button
        android:id="@+id/button_point"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:backgroundTint="#E4DFDF"
        android:insetLeft="0dp"
        android:insetTop="1dp"
        android:insetRight="0dp"
        android:insetBottom="1dp"
        android:text="@string/point"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/view_cur1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/_0"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_currency1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/view_cur2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/_0"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_currency2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spinner_currency1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/button_ce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spinner_currency2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/view_cur1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>